<article
  itemscope="itemscope"
  itemtype="http://schema.org/Article"
>
<header>
  <h1
    class="article-title"
    itemprop="name"
  >
    [% article.schema.core.title | html %]
  </h1>
</header>
<section
  class="article-summary"
  itemprop="description"
>
  [% article.content %]
</section>
[%- FOREACH section in article.components.sections -%]
<section>
  [% section.content %]
</section>
[%- END -%]
<footer>
  <div class="article-meta-updated">
    Updated <time itemprop="dateModified">[% article.schema.core.updated | html %]</time>
  </div>
</footer>
</article>
